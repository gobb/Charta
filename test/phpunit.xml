<phpunit bootstrap="./bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Core">
            <directory>./src</directory>
        </testsuite>
    </testsuites>
    
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory>../src/Charta</directory>
            <exclude>
                <file>../src/Charta/Wrappers/Wrapper.php</file>
                <file>../src/Charta/Escapable.php</file>
                <file>../src/Charta/Escaper.php</file>
                <file>../src/Charta/Templater.php</file>
            </exclude>
        </whitelist>
    </filter>
    
    <logging>
        <log type="coverage-text"
            target="php://stdout"
            highLowerBound="85"
            lowUpperBound="50"
        />
        <log type="coverage-html"
            target="./coverage"
            charset="UTF-8"
            highLowerBound="85"
            lowUpperBound="50"
            showUncoveredFiles="true"
            yui="true"
        />
    </logging>
</phpunit>
